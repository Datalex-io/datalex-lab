{
	"info": {
		"_postman_id": "3ece303a-d9eb-4f58-993c-2b7412b717df",
		"name": "Slack Notification",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "24087438"
	},
	"item": [
		{
			"name": "Get user information",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"    ",
							"    if (pm.response.code === 200) {",
							"        pm.environment.set(\"userId\", pm.response.json().user.id)",
							"    }",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://slack.com/api/users.lookupByEmail?email={{email}}",
					"protocol": "https",
					"host": [
						"slack",
						"com"
					],
					"path": [
						"api",
						"users.lookupByEmail"
					],
					"query": [
						{
							"key": "email",
							"value": "{{email}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Send notification",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"channel\": \"U027R0P15EF\",\n    \"text\": \"Hello world\"\n  }",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://slack.com/api/chat.postMessage",
					"protocol": "https",
					"host": [
						"slack",
						"com"
					],
					"path": [
						"api",
						"chat.postMessage"
					]
				}
			},
			"response": []
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					""
				]
			}
		}
	]
}